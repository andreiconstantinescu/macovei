// Wrap links so that they don't overflow their parent container.
a
  word-wrap: break-word

.navbar
  background: rgba(9, 46, 78, 1.0)
  border: 0
  border-radius: 0
  margin: 0

  .navbar-toggle
    background: transparent
    border: 1px solid white
    border-radius: 0

    .icon-bar
      background: white

    &:hover
      background: lighten(mm-red, 50%)

  .navbar-collapse
    border-color: transparent

  .navbar-nav > li > a, a.navbar-brand
    color: white
    font-weight: 400
    transition: color 0.1s
    &:hover
      background: mm-red

  & .open > a, .nav .open > a:hover
    background: mm-red
    cursor: pointer

.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus
  background: mm-red
  color: white
  
@media (max-width: 991px)
  .dropdown-menu > li > a
    color: white
  .navbar
    background-color: mm-dark-blue
  .navbar-header
    float: none
  .navbar-toggle
    display: block
  .navbar-collapse
    border-top: 1px solid transparent
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.1)
    background-color: mm-dark-blue
  .navbar-collapse.collapse
    display: none!important
    background-color: mm-dark-blue
  .navbar-nav
    float: none!important
    margin: 7.5px -15px
  .navbar-nav>li
    float: none
  .navbar-nav>li>a
    padding-top: 10px
    padding-bottom: 10px
    color: white !important
  .navbar-collapse.collapse.in
    display: block!important
    background-color: mm-dark-blue
  .collapsing
    overflow: hidden!important
    background-color: mm-dark-blue
  .navbar-right
    float: none
  .dropdown-menu
    position: initial
    top: 0
    float: none
    margin: 0
    background-color: inherit
    border none
    box-shadow: none
@media (min-width: 991px) {
  .navbar-right .dropdown-menu {
    right: 0;
    left: auto;
  }
  .navbar-right .dropdown-menu-left {
    right: auto;
    left: 0;
  }
}
